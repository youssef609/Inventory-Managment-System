@model IndexSupplierVM

@{
    ViewData["Title"] = "Update Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
@using Inventory.Presentaion.App.ViewModel;
}

<h2>Update Supplier</h2>

<form asp-action="UpdateSupplier" method="post">
    <input type="hidden" asp-for="SupplierID" />
    <div class="form-group">
        <label asp-for="SupplierName" class="control-label"></label>
        <input asp-for="SupplierName" class="form-control" />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInfo" class="control-label"></label>
        <input asp-for="ContactInfo" class="form-control" />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
</form>
