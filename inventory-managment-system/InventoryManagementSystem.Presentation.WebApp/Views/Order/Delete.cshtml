@model Inventory.Presentaion.App.ViewModel.OrderVM.OrderViewModel

<h2>Delete Order</h2>

<p>Are you sure you want to delete this order?</p>

<div>
    <p><strong>Order ID:</strong> @Model.OrderID</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="OrderID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Order/Index" class="btn btn-primary">Cancel</a>
</form>

