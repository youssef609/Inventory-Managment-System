@model List<Inventory.Presentaion.App.ViewModel.OrderVM.OrderViewModel>

@{
    ViewBag.Title = "Order List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.CustomerName</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a href="/Order/Details/@order.OrderID" class="btn btn-info">Details</a>
                    <a href="/Order/Edit/@order.OrderID" class="btn btn-warning">Edit</a>
                    <a href="/Order/Delete/@order.OrderID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Order/Create" class="btn btn-success">Create New Order</a>
