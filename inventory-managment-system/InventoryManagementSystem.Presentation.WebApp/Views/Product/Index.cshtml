
@model List<Inventory.Presentaion.App.ViewModel.IndexProductVM>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Supplier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.SupplierName</td>
                <td>
                    <a asp-action="Details" asp-route-productID="@item.ProductID">Details</a> |
                    <a asp-action="Edit" asp-route-productID="@item.ProductID">Edit</a> |
                    <a asp-action="Delete" asp-route-productID="@item.ProductID">Delete</a> |
                    <a asp-action="Restock" asp-route-productID="@item.ProductID">Restock</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>
