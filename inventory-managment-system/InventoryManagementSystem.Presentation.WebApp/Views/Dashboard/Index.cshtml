@model Inventory.Presentation.App.ViewModel.DashBoardViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4" style="font-weight: bold; color: #007bff;">Welcome to the Inventory Management System</h1>



    <h2 class="my-4">Dashboard</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Total Products</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalProducts</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Sales</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalSales.ToString("C")</h5> <!-- Format as currency -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Total Suppliers</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalSuppliers</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Total In Stock</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalInStockProducts</h5>
                </div>
            </div>
        </div>
    </div>

    <h3 class="my-4">Low Stock Products</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.LowStockProducts)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>

